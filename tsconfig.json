{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@quirk-a-bot/*": ["packages/*/src"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/rxjs/dist/types/index.d.ts"
    ],
    "types": [
      "@types/jest",
      "@types/node",
      "./node_modules/rxjs/dist/types/index.d.ts"
    ],
    "preserveSymlinks": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react",
    "isolatedModules": true,
    "checkJs": false,
    "noEmit": true
  },
  "exclude": [
    "**/node_modules/**/*",
    "**/dist/**",
    "**/build/**",
    "**/lib/**",
    "**/public/**"
  ]
}
