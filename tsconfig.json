{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@quirk-a-bot/*": ["packages/*/src"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["@types/jest", "@types/node"],

    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react",
    "noEmit": true
  },
  "exclude": [
    "**/node_modules/**/*",
    "**/dist/**",
    "**/build/**",
    "**/lib/**",
    "**/public/**"
  ]
}
