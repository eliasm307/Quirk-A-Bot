{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@quirk-a-bot/*": ["packages/*/src"]
    },
    "typeRoots": ["./src/declarations", "./node_modules/@types"],

    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "jsx": "react",
    "isolatedModules": true,
    "checkJs": false,
    "noEmit": true
  }
}
