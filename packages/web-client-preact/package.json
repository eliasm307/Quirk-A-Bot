{
  "private": true,
  "name": "@quirk-a-bot/web-client-preact",
  "version": "0.0.0",
  "license": "MIT",
  "workspaces": {
    "nohoist": [
      "preact",
      "**/preact/**",
      "preact-render-to-string",
      "**/preact-render-to-string/**"
    ]
  },
  "scripts": {
    "start": "yarn && preact watch",
    "deploy": "firebase deploy",
    "build": "yarn && rm -rf build && preact build",
    "serve": "sirv build --port 8080 --cors --single",
    "lint": "eslint 'src/**/*.{js,jsx,ts,tsx}'",
    "test": "yarn && jest ./tests",
    "firebase:start-emulators": "yarn --cwd ../firebase-utils start-emulators"
  },
  "dependencies": {
    "@quirk-a-bot/data-model": "*",
    "@quirk-a-bot/common": "*",
    "fs": "^0.0.1-security",
    "preact": "^10.3.1",
    "preact-render-to-string": "^5.1.4",
    "preact-router": "^3.2.1"
  },
  "devDependencies": {
    "preact-cli": "^3.0.0",
    "sirv-cli": "^1.0.0-next.3",
    "jest-preset-preact": "^4.0.2",
    "enzyme-adapter-preact-pure": "^2.2.0",
    "eslint-config-preact": "^1.1.3"
  },
  "jest": {
    "preset": "jest-preset-preact",
    "setupFiles": [
      "<rootDir>/tests/__mocks__/browserMocks.ts",
      "<rootDir>/tests/__mocks__/setupTests.ts"
    ]
  },
  "browser": {
    "fs": false
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}