{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "sourceMap": true,
    "noEmitOnError": true
  },
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/lib/**",
    "**/public/**",
    "**/*.spec.*",
    "**/*.test.*",
    "**/coverage/**",
    "**/sw.js",
    "**/*-overrides.js",
    "**/*.config.js",
    "**/*.eslintrc.js",
    "**/discord-bot/**"
  ]
}
