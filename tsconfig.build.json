{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "commonjs",
    "target": "es2015",
    "sourceMap": true,
    "noEmit": false,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "declaration": true,
    "downlevelIteration": true,
    "strict": true,
    "alwaysStrict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./packages",
    "paths": {
      "@quirk-a-bot/*": ["*/src"]
    }
  },
  "exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/lib/**",
    "**/public/**",
    "**/*.spec.*",
    "**/*.test.*",
    "**/coverage/**",
    "**/sw.js",
    "**/*-overrides.js",
    "**/*.config.js",
    "**/*.eslintrc.js",
    "**/discord-bot/**"
  ]
}
